@{
    ViewData["Title"] = "Восстановление пароля";
}

<div class="auth-wrapper">
    <div class="auth-split">
        <div class="auth-art"></div>
        <div class="auth-pane">
            @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
            {
                <div class="alert alert-danger mb-3">
                    @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@err.ErrorMessage</div>
                    }
                </div>
            }
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-info mb-3">
                    @ViewBag.Message
                </div>
            }
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h3 class="auth-title mb-0">Восстановление пароля</h3>
                <div class="small">Вспомнили пароль? <a asp-action="Login" class="text-primary">Войти</a></div>
            </div>
            <p class="auth-subtitle mb-4">Введите ваш email или имя пользователя, и мы поможем вам восстановить доступ к аккаунту.</p>
            <form asp-action="ForgotPassword" method="post">
                <div class="mb-3">
                    <label for="emailOrUsername" class="form-label">Email или имя пользователя *</label>
                    <input type="text" class="form-control" id="emailOrUsername" name="emailOrUsername" required placeholder="your.email@example.com или ваше_имя">
                    <div class="form-text">Укажите email или имя пользователя, указанные при регистрации</div>
                </div>
                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-primary btn-lg">Восстановить пароль</button>
                </div>
            </form>
            <div class="text-center mt-4">
                <small class="text-muted">
                    Нет аккаунта? <a asp-action="Register" class="text-primary">Зарегистрироваться</a>
                </small>
            </div>
        </div>
    </div>
</div>

