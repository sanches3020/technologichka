@{
    ViewData["Title"] = "Сброс пароля";
}

<div class="auth-wrapper">
    <div class="auth-split">
        <div class="auth-art"></div>
        <div class="auth-pane">
            @if (ViewBag.Success == true)
            {
                <div class="alert alert-success mb-3">
                    <h5>✅ Пароль успешно изменен!</h5>
                    <p class="mb-0">Теперь вы можете войти в систему с новым паролем.</p>
                </div>
                <div class="d-grid mb-3">
                    <a asp-action="Login" class="btn btn-primary btn-lg">Войти в систему</a>
                </div>
            }
            else
            {
                @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
                {
                    <div class="alert alert-danger mb-3">
                        @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div>@err.ErrorMessage</div>
                        }
                    </div>
                }
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h3 class="auth-title mb-0">Сброс пароля</h3>
                </div>
                @if (ViewBag.Email != null)
                {
                    <div class="alert alert-info mb-3">
                        <small>Восстановление пароля для: <strong>@ViewBag.Email</strong></small>
                    </div>
                }
                <p class="auth-subtitle mb-4">Введите новый пароль для вашего аккаунта.</p>
                <form asp-action="ResetPassword" method="post">
                    <div class="mb-3">
                        <label for="password" class="form-label">Новый пароль *</label>
                        <input type="password" class="form-control" id="password" name="password" required minlength="8" autocomplete="new-password" placeholder="Минимум 8 символов">
                        <div class="form-text">Рекомендуется 1 заглавная, 1 цифра и 1 символ</div>
                    </div>
                    <div class="mb-3">
                        <label for="confirmPassword" class="form-label">Подтвердите пароль *</label>
                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required autocomplete="new-password" placeholder="Повторите пароль">
                    </div>
                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary btn-lg">Изменить пароль</button>
                    </div>
                </form>
                <div class="text-center mt-4">
                    <small class="text-muted">
                        <a asp-action="Login" class="text-primary">Вернуться к входу</a>
                    </small>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const password = document.getElementById('password');
            const confirmPassword = document.getElementById('confirmPassword');

            function validatePassword() {
                const value = password.value;
                if (value.length < 8) {
                    password.setCustomValidity('Пароль должен содержать минимум 8 символов');
                } else {
                    password.setCustomValidity('');
                }
                validateConfirmPassword();
            }

            function validateConfirmPassword() {
                if (password.value !== confirmPassword.value) {
                    confirmPassword.setCustomValidity('Пароли не совпадают');
                } else {
                    confirmPassword.setCustomValidity('');
                }
            }

            if (password) {
                password.addEventListener('input', validatePassword);
                password.addEventListener('blur', validatePassword);
            }

            if (confirmPassword) {
                confirmPassword.addEventListener('input', validateConfirmPassword);
                confirmPassword.addEventListener('blur', validateConfirmPassword);
            }
        });
    </script>
}

